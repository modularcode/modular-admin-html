										</tr>
									</tbody>
								</table>

							</section>

						</div>
					</div>
				</div>

				{{!-- Hover rows column --}}
				<div class="col-md-6">
					<div class="panel">
						<div class="panel-body">

							<div class="panel-title-block">
								<h3 class="title">
