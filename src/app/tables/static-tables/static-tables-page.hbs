											<th>Username</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<th scope="row">1</th>
											<td>Mark</td>
											<td>Otto</td>
											<td>@mdo</td>
										</tr>
										<tr>
											<th scope="row">2</th>
											<td>Jacob</td>
											<td>Thornton</td>
											<td>@fat</td>
										</tr>
										<tr>
											<th scope="row">3</th>
											<td>Larry</td>
											<td>the Bird</td>
											<td>@twitter</td>
										</tr>
									</tbody>
								</table>

							</section>

						</div>
					</div>
				</div>

			</div>
		</section>


		<section class="section">
			<div class="row">

				{{!-- Bordered table column --}}
				<div class="col-md-6">
					<div class="panel">
						<div class="panel-body">

							<div class="panel-title-block">
								<h3 class="title">
									Bordered
								</h3>
							</div>

							<section class="example">

								<table class="table table-bordered">
									<thead>
