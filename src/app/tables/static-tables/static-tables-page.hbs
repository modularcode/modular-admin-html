---
page: static-tables
---
{{#extend "app/app-layout"}}
	{{#content "body"}}

		<div class="title-block">
			<h1 class="title">
				Static Tables
			</h1>
			<p class="subtitle">
				When blocks aren't enough
			</p>
		</div>

		<section class="section">
			<div class="row">

				{{!-- Basic example column --}}
				<div class="col-md-6">
					<div class="panel">
						<div class="panel-body">

							<div class="panel-title-block">
								<h3 class="title">
									Basic example
								</h3>
							</div>

							<section class="example">

								<table class="table">
									<thead>
										<tr>
											<th>#</th>
											<th>First Name</th>
											<th>Last Name</th>
											<th>Username</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<th scope="row">1</th>
											<td>Mark</td>
											<td>Otto</td>
											<td>@mdo</td>
										</tr>
										<tr>
											<th scope="row">2</th>
											<td>Jacob</td>
											<td>Thornton</td>
											<td>@fat</td>
										</tr>
										<tr>
											<th scope="row">3</th>
											<td>Larry</td>
											<td>the Bird</td>
											<td>@twitter</td>
										</tr>
									</tbody>
								</table>

							</section>

						</div>
					</div>
				</div>


				{{!-- Striped table column --}}
				<div class="col-md-6">
					<div class="panel">
						<div class="panel-body">

							<div class="panel-title-block">
								<h3 class="title">
									Striped rows
								</h3>
							</div>

							<section class="example">

								<table class="table table-striped">
									<thead>
										<tr>
											<th>#</th>
